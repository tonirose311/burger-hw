<div class="text-center">
  <div class="container">
    <h1 class="display-5 title">B - U - R - G - E - R - S</h1>

    <div class="row">
      <div class="col" id="left-col">
        <div class="text-right ml-auto mr-5">
          {{#each burgers}}
            {{#unless devoured}}
              <div class="mb-1">
                {{burger_name}}
                <button class="btn btn-sm btn-outline-danger devour" burgerId="{{id}}">
                  Devour It!
                </button>
              </div>
            {{/unless}}
          {{/each}}
        </div>
      </div>

      <div class="col" id="right-col">
        <div class="text-left mr-auto ml-5">
          {{#each burgers}}
            {{#if devoured}}
              <div class="mb-1">
                {{burger_name}}
                <button class="btn btn-sm btn-outline-dark remove" burgerId="{{id}}">
                  Delete
                </button>
              </div>
            {{/if}}
          {{/each}}
        </div>
      </div>

</div>
    <p class="lead">Enter a burger</p>
    <form id="add-burger">
      <div class="form-group mx-auto" style="width: 35%">
        <textarea type="text" class="form-control form-control-md" name="bname" id="burger"></textarea>
      </div>
      <button type="submit" class="btn btn-danger">Add Burger</button>
    </form>
  </div>
</div>